{% extends 'base.html.twig' %}

{% block title %}StopClope - Statistiques{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Tabs */
    .stats-tabs {
        display: flex;
        background: var(--bg-secondary);
        border-radius: var(--radius-lg);
        padding: 4px;
        margin-bottom: 20px;
        gap: 4px;
    }

    .stats-tab {
        flex: 1;
        padding: 12px 8px;
        background: transparent;
        border: none;
        border-radius: var(--radius-md);
        color: var(--text-secondary);
        font-size: 0.85rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: center;
    }

    .stats-tab:hover {
        color: var(--text-primary);
    }

    .stats-tab.active {
        background: var(--bg-card);
        color: var(--accent);
        box-shadow: var(--shadow-sm);
    }

    .stats-tab-icon {
        display: block;
        font-size: 1.2rem;
        margin-bottom: 4px;
    }

    .tab-content {
        display: none;
    }

    .tab-content.active {
        display: block;
    }

    /* Health timeline */
    .health-timeline {
        position: relative;
        padding-left: 20px;
    }

    .health-timeline::before {
        content: '';
        position: absolute;
        left: 6px;
        top: 10px;
        bottom: 10px;
        width: 2px;
        background: linear-gradient(180deg, var(--success), var(--accent));
    }

    .health-item {
        position: relative;
        padding: 12px 0 12px 20px;
        border-bottom: 1px solid var(--bg-secondary);
    }

    .health-item:last-child {
        border-bottom: none;
    }

    .health-item::before {
        content: '';
        position: absolute;
        left: -17px;
        top: 18px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--bg-card);
        border: 2px solid var(--text-secondary);
    }

    .health-item.achieved::before {
        background: var(--success);
        border-color: var(--success);
        box-shadow: 0 0 8px var(--success);
    }

    .health-item.next::before {
        background: var(--warning);
        border-color: var(--warning);
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%, 100% { box-shadow: 0 0 0 0 rgba(255, 193, 7, 0.4); }
        50% { box-shadow: 0 0 0 8px rgba(255, 193, 7, 0); }
    }

    .health-time {
        font-size: 0.75rem;
        color: var(--text-secondary);
        margin-bottom: 4px;
    }

    .health-item.achieved .health-time {
        color: var(--success);
    }

    .health-benefit {
        font-size: 0.9rem;
        color: var(--text-primary);
    }

    .health-item.achieved .health-benefit {
        font-weight: 600;
    }

    .health-icon {
        margin-right: 8px;
    }

    /* Charts */
    .chart-container {
        position: relative;
        height: 200px;
        margin: 20px 0;
    }

    .bar-chart {
        display: flex;
        align-items: flex-end;
        justify-content: space-around;
        height: 150px;
        padding: 10px 0;
    }

    .bar-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 1;
        max-width: 40px;
    }

    .bar {
        width: 24px;
        background: linear-gradient(180deg, var(--accent), var(--accent-light));
        border-radius: 4px 4px 0 0;
        transition: height 0.5s ease;
        min-height: 4px;
    }

    .bar-label {
        font-size: 0.65rem;
        color: var(--text-secondary);
        margin-top: 8px;
        text-align: center;
    }

    .bar-value {
        font-size: 0.75rem;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .score-chart .bar {
        background: linear-gradient(180deg, var(--success), #00ff88);
    }

    .score-chart .bar.negative {
        background: linear-gradient(180deg, var(--accent), var(--accent-light));
    }

    .heatmap {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 3px;
    }

    .heatmap-cell {
        aspect-ratio: 1;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.6rem;
        color: var(--text-secondary);
    }

    /* Savings card */
    .savings-card {
        background: linear-gradient(135deg, var(--success), #00ff88);
        color: #000;
    }

    .savings-card .score-value {
        color: #000;
    }

    .savings-card .score-label {
        color: rgba(0,0,0,0.7);
    }

    /* Badges */
    .badges-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 12px;
    }

    .badge-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 15px 8px;
        background: var(--bg-secondary);
        border-radius: 12px;
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .badge-item.unlocked {
        background: linear-gradient(135deg, var(--bg-secondary), rgba(0, 217, 165, 0.1));
        border: 1px solid var(--success);
    }

    .badge-item.locked {
        opacity: 0.5;
        filter: grayscale(0.8);
    }

    .badge-icon {
        font-size: 2rem;
        margin-bottom: 8px;
    }

    .badge-item.unlocked .badge-icon {
        animation: badge-bounce 0.5s ease;
    }

    @keyframes badge-bounce {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.2); }
    }

    .badge-name {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 4px;
    }

    .badge-desc {
        font-size: 0.65rem;
        color: var(--text-secondary);
        line-height: 1.3;
    }

    .badge-date {
        font-size: 0.6rem;
        color: var(--success);
        margin-top: 6px;
    }

    .badges-summary {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-bottom: 15px;
        padding: 10px;
        background: var(--bg-secondary);
        border-radius: 8px;
    }

    /* Accessibility: hidden table for screen readers */
    .sr-only-table {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        border: 0;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <header class="header">
        <h1>Statistiques</h1>
    </header>

    <!-- Tabs navigation -->
    <div class="stats-tabs" role="tablist" aria-label="Sections statistiques">
        <button class="stats-tab active" role="tab" aria-selected="true" aria-controls="tab-overview" id="btn-overview" onclick="switchTab('overview')">
            <span class="stats-tab-icon" aria-hidden="true">üìä</span>
            Vue d'ensemble
        </button>
        <button class="stats-tab" role="tab" aria-selected="false" aria-controls="tab-graphs" id="btn-graphs" onclick="switchTab('graphs')">
            <span class="stats-tab-icon" aria-hidden="true">üìà</span>
            Graphiques
        </button>
        <button class="stats-tab" role="tab" aria-selected="false" aria-controls="tab-health" id="btn-health" onclick="switchTab('health')">
            <span class="stats-tab-icon" aria-hidden="true">‚ù§Ô∏è</span>
            Sant√©
        </button>
    </div>

    <!-- TAB 1: Vue d'ensemble -->
    <div id="tab-overview" class="tab-content active" role="tabpanel" aria-labelledby="btn-overview">

        <!-- Tendances et projection -->
        {% if weekly_comparison is null and first_date %}
        <div class="card">
            <h3 style="margin-bottom: 15px;"><span aria-hidden="true">üìà</span> Tendances</h3>
            <div style="padding: 15px; background: var(--bg-secondary); border-radius: 8px; text-align: center;">
                <div style="font-size: 2rem; margin-bottom: 10px;" aria-hidden="true">üìä</div>
                <div style="font-size: 0.9rem; color: var(--text-secondary);">
                    Continue encore quelques jours pour voir tes tendances !
                    <br>Les comparaisons seront disponibles apr√®s 4 jours d'utilisation.
                </div>
            </div>
        </div>
        {% elseif weekly_comparison and savings.daily_avg > 0 %}
        <div class="card">
            <h3 style="margin-bottom: 15px;"><span aria-hidden="true">üìà</span> Tendances</h3>

            {% if weekly_comparison.is_early is defined and weekly_comparison.is_early %}
            <div style="padding: 10px; background: var(--warning); color: #000; border-radius: 8px; margin-bottom: 15px; font-size: 0.8rem;">
                <span aria-hidden="true">‚ö†Ô∏è</span> <strong>Tendance pr√©liminaire</strong> ‚Äî Bas√©e sur {{ weekly_comparison.period_days * 2 }} jours de donn√©es seulement.
            </div>
            {% endif %}

            {% set trend = weekly_comparison.diff_avg %}
            {% set trend_abs = trend|abs %}
            {% set trend_icon = trend < 0 ? '‚ÜòÔ∏è' : (trend > 0 ? '‚ÜóÔ∏è' : '‚û°Ô∏è') %}
            {% set trend_color = trend < 0 ? 'var(--success)' : (trend > 0 ? 'var(--error)' : 'var(--text-secondary)') %}

            <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 15px; padding: 15px; background: var(--bg-secondary); border-radius: 8px;">
                <span style="font-size: 2rem;" aria-hidden="true">{{ trend_icon }}</span>
                <div>
                    <div style="font-size: 1.1rem; font-weight: 600; color: {{ trend_color }};">
                        {% if trend < 0 %}
                            <strong>{{ trend_abs }}</strong> clope{{ trend_abs != 1 ? 's' : '' }} de moins par jour
                        {% elseif trend > 0 %}
                            <strong>{{ trend_abs }}</strong> clope{{ trend_abs != 1 ? 's' : '' }} de plus par jour
                        {% else %}
                            Consommation stable
                        {% endif %}
                    </div>
                    <div style="font-size: 0.85rem; color: var(--text-secondary);">
                        ({{ weekly_comparison.current.avg }}/j vs {{ weekly_comparison.previous.avg }}/j)
                    </div>
                </div>
            </div>

            {% if trend < 0 and savings.daily_avg > 0 and weekly_comparison.previous.days_count >= 5 %}
                {% set weeks_to_zero = (weekly_comparison.current.avg / trend_abs)|round %}
                {% if weeks_to_zero > 0 and weeks_to_zero < 52 %}
                {% set target_date = "now"|date_modify("+" ~ weeks_to_zero ~ " weeks") %}
                <div style="padding: 15px; background: linear-gradient(135deg, var(--success), #00ff88); border-radius: 8px; color: #000;">
                    <div style="font-weight: 600; margin-bottom: 5px;"><span aria-hidden="true">üéØ</span> Projection</div>
                    <div style="font-size: 0.9rem;">
                        √Ä ce rythme : <strong>z√©ro clope</strong> vers le <strong>{{ target_date|date('d/m/Y') }}</strong>
                    </div>
                </div>
                {% endif %}
            {% endif %}
        </div>
        {% endif %}

        <!-- √âconomies -->
        {% if savings.total > 0 %}
        <div class="card score-display savings-card">
            <div class="score-value" style="font-size: 2.5rem;">{{ savings.total }}‚Ç¨</div>
            <div class="score-label">√âconomis√©s</div>
            <div style="margin-top: 15px; font-size: 0.9rem;">
                <div>{{ savings.cigs_avoided }} clopes √©vit√©es en {{ savings.days }} jours</div>
                <div style="margin-top: 5px;">Moyenne : {{ savings.daily_avg }} clopes/jour (vs {{ savings.initial_daily }} avant)</div>
            </div>
        </div>
        {% endif %}

        <!-- Rang actuel -->
        <div class="card score-display">
            <div class="rank-badge" style="font-size: 1.2rem; padding: 12px 24px;">{{ rank.rank }}</div>
            <div class="score-value" style="font-size: 3rem; margin-top: 15px;">{{ rank.total_score }}</div>
            <div class="score-label">Points totaux</div>
            <div class="progress-bar">
                <div class="progress-fill" style="width: {{ rank.progress }}%"></div>
            </div>
            <div class="score-label" style="margin-top: 8px;">
                Prochain rang √† {{ rank.next_rank_threshold }} pts
            </div>
        </div>

        <!-- Badges -->
        {% if badges is defined and badges|length > 0 %}
        <div class="card">
            <h3 style="margin-bottom: 15px;">Badges</h3>

            {% set unlocked_count = 0 %}
            {% for code, badge in badges %}
                {% if badge.unlocked %}
                    {% set unlocked_count = unlocked_count + 1 %}
                {% endif %}
            {% endfor %}

            <div class="badges-summary">
                <span style="font-size: 1.5rem;" aria-hidden="true">üèÖ</span>
                <span style="font-weight: 600;">{{ unlocked_count }} / {{ badges|length }} badges</span>
            </div>

            <div class="badges-grid">
                {% for code, badge in badges %}
                <div class="badge-item {{ badge.unlocked ? 'unlocked' : 'locked' }}" title="{{ badge.description }}">
                    <div class="badge-icon" aria-hidden="true">{{ badge.icon }}</div>
                    <div class="badge-name">{{ badge.name }}</div>
                    <div class="badge-desc">{{ badge.description }}</div>
                    {% if badge.unlocked and badge.unlocked_at %}
                    <div class="badge-date">{{ badge.unlocked_at|date('d/m/Y') }}</div>
                    {% endif %}
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        <!-- Comparaison semaine -->
        {% if weekly_comparison %}
        <div class="card">
            <h3 style="margin-bottom: 15px;">Cette semaine vs pr√©c√©dente</h3>
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-value">{{ weekly_comparison.current.total }}</div>
                    <div class="stat-label">Cette semaine</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">{{ weekly_comparison.previous.total }}</div>
                    <div class="stat-label">Semaine pr√©c√©dente</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value" style="color: {{ weekly_comparison.diff_total < 0 ? 'var(--success)' : (weekly_comparison.diff_total > 0 ? 'var(--accent)' : 'inherit') }};">
                        {{ weekly_comparison.diff_total >= 0 ? '+' : '' }}{{ weekly_comparison.diff_total }}
                    </div>
                    <div class="stat-label">Diff√©rence</div>
                </div>
            </div>
        </div>
        {% endif %}

    </div>

    <!-- TAB 2: Graphiques -->
    <div id="tab-graphs" class="tab-content" role="tabpanel" aria-labelledby="btn-graphs">

        <!-- Graphique clopes/jour -->
        {% if first_date %}
        <div class="card">
            <h3>Clopes par jour (7 jours)</h3>
            <div class="chart-container">
                <div class="bar-chart" role="img" aria-label="Graphique du nombre de cigarettes par jour">
                    {% set max_count = 1 %}
                    {% for date, count in monthly_stats|slice(-7) %}
                        {% if count > max_count %}
                            {% set max_count = count %}
                        {% endif %}
                    {% endfor %}

                    {% for i in 7..1 %}
                        {% set check_date = ("now")|date_modify("-" ~ i ~ " days")|date("Y-m-d") %}
                        {% if check_date >= first_date|date("Y-m-d") %}
                            {% set count = monthly_stats[check_date]|default(0) %}
                            {% set height = max_count > 0 ? (count / max_count * 120) : 0 %}
                            <div class="bar-wrapper">
                                <span class="bar-value">{{ count }}</span>
                                <div class="bar" style="height: {{ height }}px;"></div>
                                <span class="bar-label">{{ check_date|date("D")|slice(0, 3) }}</span>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            <!-- Tableau accessible cach√© -->
            <table class="sr-only-table">
                <caption>Nombre de cigarettes par jour sur les 7 derniers jours</caption>
                <thead><tr><th>Jour</th><th>Cigarettes</th></tr></thead>
                <tbody>
                {% for i in 7..1 %}
                    {% set check_date = ("now")|date_modify("-" ~ i ~ " days")|date("Y-m-d") %}
                    {% if check_date >= first_date|date("Y-m-d") %}
                    <tr><td>{{ check_date|date("D d/m") }}</td><td>{{ monthly_stats[check_date]|default(0) }}</td></tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}

        <!-- Graphique scores/jour -->
        {% if weekly_scores|length > 0 %}
        <div class="card">
            <h3>Score par jour (7 jours)</h3>
            <div class="chart-container score-chart">
                <div class="bar-chart" role="img" aria-label="Graphique des scores par jour">
                    {% set max_score = 1 %}
                    {% set min_score = 0 %}
                    {% for date, score_data in weekly_scores %}
                        {% if score_data.total_score > max_score %}{% set max_score = score_data.total_score %}{% endif %}
                        {% if score_data.total_score < min_score %}{% set min_score = score_data.total_score %}{% endif %}
                    {% endfor %}
                    {% set range = max_score - min_score %}
                    {% if range == 0 %}{% set range = 1 %}{% endif %}

                    {% for date, score_data in weekly_scores %}
                        {% set height = ((score_data.total_score - min_score) / range * 120)|round %}
                        <div class="bar-wrapper">
                            <span class="bar-value">{{ score_data.total_score > 0 ? '+' : '' }}{{ score_data.total_score }}</span>
                            <div class="bar {{ score_data.total_score < 0 ? 'negative' : '' }}" style="height: {{ height > 4 ? height : 4 }}px;"></div>
                            <span class="bar-label">{{ date|date("D")|slice(0, 3) }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <!-- Tableau accessible cach√© -->
            <table class="sr-only-table">
                <caption>Score par jour sur les 7 derniers jours</caption>
                <thead><tr><th>Jour</th><th>Score</th></tr></thead>
                <tbody>
                {% for date, score_data in weekly_scores %}
                <tr><td>{{ date|date("D d/m") }}</td><td>{{ score_data.total_score }}</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}

        <!-- Semaine type -->
        {% if weekday_stats|length > 0 %}
        <div class="card">
            <h3>Semaine type</h3>
            <p style="font-size: 0.8rem; color: var(--text-secondary); margin-bottom: 15px;">Moyenne par jour de la semaine</p>
            <div class="chart-container">
                <div class="bar-chart" role="img" aria-label="Graphique de la moyenne par jour de semaine">
                    {% set max_weekday = 1 %}
                    {% for day, count in weekday_stats %}
                        {% if count > max_weekday %}{% set max_weekday = count %}{% endif %}
                    {% endfor %}

                    {% set days_order = ['Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam', 'Dim'] %}
                    {% for day in days_order %}
                        {% set count = weekday_stats[day]|default(0) %}
                        {% set height = max_weekday > 0 ? (count / max_weekday * 120) : 0 %}
                        <div class="bar-wrapper">
                            <span class="bar-value">{{ count }}</span>
                            <div class="bar" style="height: {{ height }}px;"></div>
                            <span class="bar-label">{{ day }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <!-- Tableau accessible cach√© -->
            <table class="sr-only-table">
                <caption>Moyenne de cigarettes par jour de la semaine</caption>
                <thead><tr><th>Jour</th><th>Moyenne</th></tr></thead>
                <tbody>
                {% for day in ['Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam', 'Dim'] %}
                <tr><td>{{ day }}</td><td>{{ weekday_stats[day]|default(0) }}</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}

        <!-- Heatmap des heures -->
        {% if hourly_stats|length > 0 %}
        <div class="card">
            <h3>Heures de consommation</h3>
            <p style="font-size: 0.8rem; color: var(--text-secondary); margin-bottom: 15px;">Moyenne par heure</p>
            <div class="heatmap" role="img" aria-label="Carte thermique des heures de consommation">
                {% set max_hour = 0 %}
                {% for hour, count in hourly_stats %}
                    {% if count > max_hour %}{% set max_hour = count %}{% endif %}
                {% endfor %}

                {% for hour in 0..23 %}
                    {% set count = hourly_stats[hour]|default(0) %}
                    {% set intensity = (max_hour > 0) ? (count / max_hour) : 0 %}
                    {% set level = (intensity * 9)|round %}
                    {% if level == 0 %}{% set bg = '#00c853' %}
                    {% elseif level == 1 %}{% set bg = '#4caf50' %}
                    {% elseif level == 2 %}{% set bg = '#8bc34a' %}
                    {% elseif level == 3 %}{% set bg = '#cddc39' %}
                    {% elseif level == 4 %}{% set bg = '#ffeb3b' %}
                    {% elseif level == 5 %}{% set bg = '#ffc107' %}
                    {% elseif level == 6 %}{% set bg = '#ff9800' %}
                    {% elseif level == 7 %}{% set bg = '#ff5722' %}
                    {% elseif level == 8 %}{% set bg = '#f44336' %}
                    {% else %}{% set bg = '#d32f2f' %}{% endif %}
                    <div class="heatmap-cell" style="background: {{ bg }}; color: #000;" title="{{ count|round(1) }} clopes/jour √† {{ hour }}h">
                        {{ hour }}h
                    </div>
                {% endfor %}
            </div>
            <!-- Tableau accessible cach√© -->
            <table class="sr-only-table">
                <caption>Moyenne de cigarettes par heure de la journ√©e</caption>
                <thead><tr><th>Heure</th><th>Moyenne</th></tr></thead>
                <tbody>
                {% for hour in 0..23 %}
                <tr><td>{{ hour }}h</td><td>{{ hourly_stats[hour]|default(0)|round(1) }}</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}

        <!-- Intervalle moyen -->
        {% if daily_intervals|length > 0 %}
        <div class="card">
            <h3>Intervalle moyen entre clopes</h3>
            <p style="font-size: 0.8rem; color: var(--text-secondary); margin-bottom: 15px;">En minutes</p>
            <div class="chart-container">
                <div class="bar-chart" role="img" aria-label="Graphique de l'intervalle moyen entre cigarettes">
                    {% set max_interval = 1 %}
                    {% for date, interval in daily_intervals %}
                        {% if interval > max_interval %}{% set max_interval = interval %}{% endif %}
                    {% endfor %}

                    {% for date, interval in daily_intervals %}
                        {% set height = max_interval > 0 ? (interval / max_interval * 120) : 0 %}
                        <div class="bar-wrapper">
                            <span class="bar-value">{{ interval }}m</span>
                            <div class="bar" style="height: {{ height }}px; background: linear-gradient(180deg, #00d9a5, #00ff88);"></div>
                            <span class="bar-label">{{ date|date("D")|slice(0, 3) }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}

        <!-- R√©sum√© mensuel -->
        <div class="card">
            <h3 style="margin-bottom: 15px;">30 derniers jours</h3>
            {% set total_cigs = 0 %}
            {% set days_with_data = 0 %}
            {% for date, count in monthly_stats %}
                {% set total_cigs = total_cigs + count %}
                {% if count > 0 %}{% set days_with_data = days_with_data + 1 %}{% endif %}
            {% endfor %}

            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-value">{{ total_cigs }}</div>
                    <div class="stat-label">Total clopes</div>
