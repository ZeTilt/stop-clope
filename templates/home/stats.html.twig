{% extends 'base.html.twig' %}

{% block title %}StopClope - Statistiques{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .health-timeline {
        position: relative;
        padding-left: 20px;
    }

    .health-timeline::before {
        content: '';
        position: absolute;
        left: 6px;
        top: 10px;
        bottom: 10px;
        width: 2px;
        background: linear-gradient(180deg, var(--success), var(--accent));
    }

    .health-item {
        position: relative;
        padding: 12px 0 12px 20px;
        border-bottom: 1px solid var(--bg-secondary);
    }

    .health-item:last-child {
        border-bottom: none;
    }

    .health-item::before {
        content: '';
        position: absolute;
        left: -17px;
        top: 18px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--bg-card);
        border: 2px solid var(--text-secondary);
    }

    .health-item.achieved::before {
        background: var(--success);
        border-color: var(--success);
        box-shadow: 0 0 8px var(--success);
    }

    .health-item.next::before {
        background: var(--warning);
        border-color: var(--warning);
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%, 100% { box-shadow: 0 0 0 0 rgba(255, 193, 7, 0.4); }
        50% { box-shadow: 0 0 0 8px rgba(255, 193, 7, 0); }
    }

    .health-time {
        font-size: 0.75rem;
        color: var(--text-secondary);
        margin-bottom: 4px;
    }

    .health-item.achieved .health-time {
        color: var(--success);
    }

    .health-benefit {
        font-size: 0.9rem;
        color: var(--text-primary);
    }

    .health-item.achieved .health-benefit {
        font-weight: 600;
    }

    .health-icon {
        margin-right: 8px;
    }
    .chart-container {
        position: relative;
        height: 200px;
        margin: 20px 0;
    }

    .bar-chart {
        display: flex;
        align-items: flex-end;
        justify-content: space-around;
        height: 150px;
        padding: 10px 0;
    }

    .bar-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 1;
        max-width: 40px;
    }

    .bar {
        width: 24px;
        background: linear-gradient(180deg, var(--accent), var(--accent-light));
        border-radius: 4px 4px 0 0;
        transition: height 0.5s ease;
        min-height: 4px;
    }

    .bar-label {
        font-size: 0.65rem;
        color: var(--text-secondary);
        margin-top: 8px;
        text-align: center;
    }

    .bar-value {
        font-size: 0.75rem;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .score-chart .bar {
        background: linear-gradient(180deg, var(--success), #00ff88);
    }

    .score-chart .bar.negative {
        background: linear-gradient(180deg, var(--accent), var(--accent-light));
    }

    .heatmap {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 3px;
    }

    .heatmap-cell {
        aspect-ratio: 1;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.6rem;
        color: var(--text-secondary);
    }

    .savings-card {
        background: linear-gradient(135deg, var(--success), #00ff88);
        color: #000;
    }

    .savings-card .score-value {
        color: #000;
    }

    .savings-card .score-label {
        color: rgba(0,0,0,0.7);
    }

    .badges-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 12px;
    }

    .badge-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 15px 8px;
        background: var(--bg-secondary);
        border-radius: 12px;
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .badge-item.unlocked {
        background: linear-gradient(135deg, var(--bg-secondary), rgba(0, 217, 165, 0.1));
        border: 1px solid var(--success);
    }

    .badge-item.locked {
        opacity: 0.5;
        filter: grayscale(0.8);
    }

    .badge-icon {
        font-size: 2rem;
        margin-bottom: 8px;
    }

    .badge-item.unlocked .badge-icon {
        animation: badge-bounce 0.5s ease;
    }

    @keyframes badge-bounce {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.2); }
    }

    .badge-name {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 4px;
    }

    .badge-desc {
        font-size: 0.65rem;
        color: var(--text-secondary);
        line-height: 1.3;
    }

    .badge-date {
        font-size: 0.6rem;
        color: var(--success);
        margin-top: 6px;
    }

    .badges-summary {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-bottom: 15px;
        padding: 10px;
        background: var(--bg-secondary);
        border-radius: 8px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <header class="header">
        <h1>Statistiques</h1>
    </header>

    <!-- Tendances et projection -->
    {% if weekly_comparison is null and first_date %}
    <div class="card">
        <h3 style="margin-bottom: 15px;">üìà Tendances</h3>
        <div style="padding: 15px; background: var(--bg-secondary); border-radius: 8px; text-align: center;">
            <div style="font-size: 2rem; margin-bottom: 10px;">üìä</div>
            <div style="font-size: 0.9rem; color: var(--text-secondary);">
                Continue encore quelques jours pour voir tes tendances !
                <br>Les comparaisons seront disponibles apr√®s 2 semaines d'utilisation.
            </div>
        </div>
    </div>
    {% elseif weekly_comparison and savings.daily_avg > 0 %}
    <div class="card">
        <h3 style="margin-bottom: 15px;">üìà Tendances</h3>
        {% set trend = weekly_comparison.diff_avg %}
        {% set trend_icon = trend < 0 ? '‚ÜòÔ∏è' : (trend > 0 ? '‚ÜóÔ∏è' : '‚û°Ô∏è') %}
        {% set trend_color = trend < 0 ? 'var(--success)' : (trend > 0 ? 'var(--error)' : 'var(--text-secondary)') %}

        <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 15px; padding: 15px; background: var(--bg-secondary); border-radius: 8px;">
            <span style="font-size: 2rem;">{{ trend_icon }}</span>
            <div>
                <div style="font-size: 1.3rem; font-weight: 700; color: {{ trend_color }};">
                    {{ trend >= 0 ? '+' : '' }}{{ trend }} clope{{ trend|abs != 1 ? 's' : '' }}/jour en moyenne
                </div>
                <div style="font-size: 0.85rem; color: var(--text-secondary);">
                    Moyenne cette semaine ({{ weekly_comparison.current.avg }}) vs semaine pr√©c√©dente ({{ weekly_comparison.previous.avg }})
                    {% if weekly_comparison.previous.days_count is defined and weekly_comparison.previous.days_count < 7 %}
                        <br><span style="color: var(--warning);">‚ö†Ô∏è Seulement {{ weekly_comparison.previous.days_count }}j de donn√©es en semaine pr√©c√©dente</span>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Projection vers objectif z√©ro si tendance n√©gative et donn√©es fiables #}
        {% if trend < 0 and savings.daily_avg > 0 and weekly_comparison.previous.days_count >= 5 %}
            {# Projection en semaines : si on perd X clopes/semaine, combien de semaines pour atteindre 0 #}
            {% set weeks_to_zero = (weekly_comparison.current.avg / (trend|abs))|round %}
            {% if weeks_to_zero > 0 and weeks_to_zero < 52 %}
            <div style="padding: 15px; background: linear-gradient(135deg, var(--success), #00ff88); border-radius: 8px; color: #000;">
                <div style="font-weight: 600; margin-bottom: 5px;">üéØ Projection (si tendance maintenue)</div>
                <div style="font-size: 0.9rem;">
                    √Ä ce rythme de r√©duction, tu pourrais atteindre <strong>z√©ro clope</strong> dans environ <strong>{{ weeks_to_zero }} semaine{{ weeks_to_zero > 1 ? 's' : '' }}</strong>.
                </div>
            </div>
            {% endif %}
        {% elseif trend < 0 and weekly_comparison.previous.days_count < 5 %}
            <div style="padding: 15px; background: var(--bg-secondary); border-radius: 8px; border-left: 3px solid var(--success);">
                <div style="font-weight: 600; margin-bottom: 5px; color: var(--success);">üëç Bonne tendance !</div>
                <div style="font-size: 0.9rem; color: var(--text-secondary);">
                    Continue encore quelques jours pour voir une projection fiable.
                </div>
            </div>
        {% elseif trend > 0 %}
            <div style="padding: 15px; background: var(--bg-secondary); border-radius: 8px; border-left: 3px solid var(--warning);">
                <div style="font-weight: 600; margin-bottom: 5px;">üí° Conseil</div>
                <div style="font-size: 0.9rem; color: var(--text-secondary);">
                    Ta consommation augmente l√©g√®rement. Essaie d'espacer un peu plus tes clopes cette semaine.
                </div>
            </div>
        {% else %}
            <div style="padding: 15px; background: var(--bg-secondary); border-radius: 8px;">
                <div style="font-size: 0.9rem; color: var(--text-secondary);">
                    Ta consommation est stable. Fixe-toi un petit objectif pour cette semaine !
                </div>
            </div>
        {% endif %}

        {# Meilleur et pire jour #}
        {% if weekday_stats|length > 0 %}
            {% set best_day = null %}
            {% set worst_day = null %}
            {% set best_count = 999 %}
            {% set worst_count = 0 %}
            {% for day, count in weekday_stats %}
                {% if count < best_count and count > 0 %}
                    {% set best_day = day %}
                    {% set best_count = count %}
                {% endif %}
                {% if count > worst_count %}
                    {% set worst_day = day %}
                    {% set worst_count = count %}
                {% endif %}
            {% endfor %}

            {% if best_day and worst_day and best_day != worst_day %}
            <div style="display: flex; gap: 10px; margin-top: 15px;">
                <div style="flex: 1; padding: 12px; background: var(--bg-secondary); border-radius: 8px; text-align: center;">
                    <div style="font-size: 1.5rem;">üèÜ</div>
                    <div style="font-size: 0.85rem; font-weight: 600;">Meilleur jour</div>
                    <div style="font-size: 0.8rem; color: var(--text-secondary);">{{ best_day }} ({{ best_count }} clopes)</div>
                </div>
                <div style="flex: 1; padding: 12px; background: var(--bg-secondary); border-radius: 8px; text-align: center;">
                    <div style="font-size: 1.5rem;">‚ö†Ô∏è</div>
                    <div style="font-size: 0.85rem; font-weight: 600;">Jour difficile</div>
                    <div style="font-size: 0.8rem; color: var(--text-secondary);">{{ worst_day }} ({{ worst_count }} clopes)</div>
                </div>
            </div>
            {% endif %}
        {% endif %}
    </div>
    {% endif %}

    <!-- √âconomies -->
    {% if savings.total > 0 %}
    <div class="card score-display savings-card">
        <div class="score-value" style="font-size: 2.5rem;">{{ savings.total }}‚Ç¨</div>
        <div class="score-label">√âconomis√©s</div>
        <div style="margin-top: 15px; font-size: 0.9rem;">
            <div>{{ savings.cigs_avoided }} clopes √©vit√©es en {{ savings.days }} jours</div>
            <div style="margin-top: 5px;">Moyenne : {{ savings.daily_avg }} clopes/jour (vs {{ savings.initial_daily }} avant)</div>
        </div>
    </div>
    {% endif %}

    <!-- Badges -->
    {% if badges is defined and badges|length > 0 %}
    <div class="card">
        <h3 style="margin-bottom: 15px;">Badges</h3>

        {% set unlocked_count = 0 %}
        {% for code, badge in badges %}
            {% if badge.unlocked %}
                {% set unlocked_count = unlocked_count + 1 %}
            {% endif %}
        {% endfor %}

        <div class="badges-summary">
            <span style="font-size: 1.5rem;">üèÖ</span>
            <span style="font-weight: 600;">{{ unlocked_count }} / {{ badges|length }} badges d√©bloqu√©s</span>
        </div>

        <div class="badges-grid">
            {% for code, badge in badges %}
            <div class="badge-item {{ badge.unlocked ? 'unlocked' : 'locked' }}" title="{{ badge.description }}">
                <div class="badge-icon">{{ badge.icon }}</div>
                <div class="badge-name">{{ badge.name }}</div>
                <div class="badge-desc">{{ badge.description }}</div>
                {% if badge.unlocked and badge.unlocked_at %}
                <div class="badge-date">{{ badge.unlocked_at|date('d/m/Y') }}</div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <!-- Timeline B√©n√©fices de la R√©duction -->
    {% if first_date %}
    {% set days_since_start = date().diff(first_date).days %}
    {% set reduction_percent = savings.daily_avg > 0 and savings.initial_daily > 0 ? ((1 - savings.daily_avg / savings.initial_daily) * 100)|round : 0 %}
    {% set cigs_reduced = savings.initial_daily - savings.daily_avg %}
    <div class="card">
        <h3 style="margin-bottom: 5px;">B√©n√©fices de ta r√©duction</h3>
        <p style="font-size: 0.75rem; color: var(--text-secondary); margin-bottom: 15px;">
            {{ reduction_percent }}% de r√©duction ({{ savings.daily_avg|round(1) }} vs {{ savings.initial_daily }} clopes/jour)
        </p>

        {# Afficher le b√©n√©fice principal si r√©duction significative #}
        {% if reduction_percent >= 25 %}
        <div style="padding: 15px; background: linear-gradient(135deg, rgba(0, 217, 165, 0.15), rgba(0, 255, 136, 0.1)); border-radius: 12px; border-left: 4px solid var(--success); margin-bottom: 20px;">
            <div style="font-size: 1.1rem; font-weight: 600; color: var(--success); margin-bottom: 8px;">
                {% if reduction_percent >= 50 %}
                    üìâ -{{ ((reduction_percent / 50) * 20)|round }}% risque cancer du poumon
                {% else %}
                    üìâ -{{ ((reduction_percent / 25) * 10)|round }}% risque cancer du poumon
                {% endif %}
            </div>
            <div style="font-size: 0.85rem; color: var(--text-secondary);">
                √âtude NCI 2024 : r√©duire de 25% diminue le risque de cancer du poumon d'environ 20%.
            </div>
        </div>
        {% endif %}

        <div class="health-timeline">
            {# Milestones bas√©s sur la R√âDUCTION (donn√©es scientifiques 2024) #}
            {% set milestones = [
                {
                    reduction: 10,
                    icon: 'üå±',
                    benefit: 'Premiers pas : moins d\'exposition quotidienne aux toxines',
                    detail: 'Chaque clope √©vit√©e = moins de goudron et monoxyde de carbone'
                },
                {
                    reduction: 25,
                    icon: 'üìâ',
                    benefit: 'Risque de cancer du poumon commence √† baisser',
                    detail: '√âtude NCI : -20% de risque en passant de 20 √† 15 clopes/jour'
                },
                {
                    reduction: 50,
                    icon: 'ü´Å',
                    benefit: 'R√©duction significative du risque pulmonaire',
                    detail: 'Diviser par 2 = baisse notable du risque de cancer'
                },
                {
                    reduction: 75,
                    icon: 'üí™',
                    benefit: 'Am√©lioration notable de la capacit√© respiratoire',
                    detail: 'Moins de mucus, meilleur souffle √† l\'effort'
                },
                {
                    reduction: 90,
                    icon: 'üåü',
                    benefit: 'Risques proches d\'un non-fumeur l√©ger',
                    detail: 'Continue vers l\'arr√™t pour maximiser les b√©n√©fices'
                },
                {
                    reduction: 100,
                    icon: 'üèÜ',
                    benefit: 'Arr√™t total : b√©n√©fices maximaux',
                    detail: 'Risque cardiaque -50% apr√®s 1-2 ans, poumons en r√©cup√©ration'
                }
            ] %}

            {% set found_next = false %}
            {% for milestone in milestones %}
                {% set is_achieved = reduction_percent >= milestone.reduction %}
                {% set is_next = not found_next and not is_achieved %}
                {% if is_next %}{% set found_next = true %}{% endif %}

                <div class="health-item {{ is_achieved ? 'achieved' : '' }} {{ is_next ? 'next' : '' }}">
                    <div class="health-time">
                        {{ milestone.reduction }}% de r√©duction
                    </div>
                    <div class="health-benefit">
                        <span class="health-icon">{{ milestone.icon }}</span>
                        {{ milestone.benefit }}
                    </div>
                    {% if is_achieved or is_next %}
                    <div style="font-size: 0.75rem; color: var(--text-secondary); margin-top: 4px; margin-left: 28px;">
                        {{ milestone.detail }}
                    </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>

        <div style="margin-top: 20px; padding: 12px; background: var(--bg-secondary); border-radius: 8px;">
            <div style="font-size: 0.8rem; color: var(--text-secondary); margin-bottom: 8px;">
                <strong>Ce que dit la science :</strong>
            </div>
            <ul style="font-size: 0.75rem; color: var(--text-secondary); margin: 0; padding-left: 20px; line-height: 1.6;">
                <li>R√©duire diminue le risque de cancer du poumon proportionnellement</li>
                <li>Pour le coeur, l'arr√™t total reste la meilleure option (pas de seuil "s√ªr")</li>
                <li>Chaque clope √©vit√©e compte : moins d'exposition = moins de risques</li>
            </ul>
        </div>

        <p style="font-size: 0.65rem; color: var(--text-secondary); margin-top: 12px; font-style: italic;">
            Sources : NCI 2024, Global Heart Journal 2024, m√©ta-analyses cardiovasculaires
        </p>
    </div>
    {% endif %}

    <!-- Rang actuel -->
    <div class="card score-display">
        <div class="rank-badge" style="font-size: 1.2rem; padding: 12px 24px;">{{ rank.rank }}</div>
        <div class="score-value" style="font-size: 3rem; margin-top: 15px;">{{ rank.total_score }}</div>
        <div class="score-label">Points totaux</div>
        <div class="progress-bar">
            <div class="progress-fill" style="width: {{ rank.progress }}%"></div>
        </div>
        <div class="score-label" style="margin-top: 8px;">
            Prochain rang √† {{ rank.next_rank_threshold }} pts
        </div>
    </div>

    <!-- Graphique clopes/jour -->
    {% if first_date %}
    <div class="card">
        <h3>Clopes par jour (7 derniers jours)</h3>
        <div class="chart-container">
            <div class="bar-chart">
                {% set max_count = 1 %}
                {% for date, count in monthly_stats|slice(-7) %}
                    {% if count > max_count %}
                        {% set max_count = count %}
                    {% endif %}
                {% endfor %}

                {% for i in 7..1 %}
                    {% set check_date = ("now")|date_modify("-" ~ i ~ " days")|date("Y-m-d") %}
                    {% if check_date >= first_date|date("Y-m-d") %}
                        {% set count = monthly_stats[check_date]|default(0) %}
                        {% set height = max_count > 0 ? (count / max_count * 120) : 0 %}
                        <div class="bar-wrapper">
                            <span class="bar-value">{{ count }}</span>
                            <div class="bar" style="height: {{ height }}px;"></div>
                            <span class="bar-label">{{ check_date|date("D")|slice(0, 3) }}</span>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Graphique scores/jour -->
    {% if weekly_scores|length > 0 %}
    <div class="card">
        <h3>Score par jour (7 derniers jours)</h3>
        <div class="chart-container score-chart">
            <div class="bar-chart">
                {% set max_score = 1 %}
                {% set min_score = 0 %}
                {% for date, score_data in weekly_scores %}
                    {% if score_data.total_score > max_score %}
                        {% set max_score = score_data.total_score %}
                    {% endif %}
                    {% if score_data.total_score < min_score %}
                        {% set min_score = score_data.total_score %}
                    {% endif %}
                {% endfor %}
                {% set range = max_score - min_score %}
                {% if range == 0 %}{% set range = 1 %}{% endif %}

                {% for date, score_data in weekly_scores %}
                    {% set height = ((score_data.total_score - min_score) / range * 120)|round %}
                    <div class="bar-wrapper">
                        <span class="bar-value">{{ score_data.total_score > 0 ? '+' : '' }}{{ score_data.total_score }}</span>
                        <div class="bar {{ score_data.total_score < 0 ? 'negative' : '' }}" style="height: {{ height > 4 ? height : 4 }}px;"></div>
                        <span class="bar-label">{{ date|date("D")|slice(0, 3) }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Semaine type -->
    {% if weekday_stats|length > 0 %}
    <div class="card">
        <h3>Semaine type</h3>
        <p style="font-size: 0.8rem; color: var(--text-secondary); margin-bottom: 15px;">Moyenne de clopes par jour de la semaine</p>
        <div class="chart-container">
            <div class="bar-chart">
                {% set max_weekday = 1 %}
                {% for day, count in weekday_stats %}
                    {% if count > max_weekday %}
                        {% set max_weekday = count %}
                    {% endif %}
                {% endfor %}

                {% set days_order = ['Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam', 'Dim'] %}
                {% for day in days_order %}
                    {% set count = weekday_stats[day]|default(0) %}
                    {% set height = max_weekday > 0 ? (count / max_weekday * 120) : 0 %}
                    <div class="bar-wrapper">
                        <span class="bar-value">{{ count }}</span>
                        <div class="bar" style="height: {{ height }}px;"></div>
                        <span class="bar-label">{{ day }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Heatmap des heures -->
    {% if hourly_stats|length > 0 %}
    <div class="card">
        <h3>Heures de consommation</h3>
        <p style="font-size: 0.8rem; color: var(--text-secondary); margin-bottom: 15px;">Moyenne par heure de la journ√©e</p>
        <div class="heatmap">
            {% set max_hour = 0 %}
            {% set min_hour = 999 %}
            {% for hour, count in hourly_stats %}
                {% if count > max_hour %}
                    {% set max_hour = count %}
                {% endif %}
                {% if count < min_hour and count > 0 %}
                    {% set min_hour = count %}
                {% endif %}
            {% endfor %}
            {% if min_hour == 999 %}{% set min_hour = 0 %}{% endif %}
            {% set range = max_hour - min_hour %}

            {% for hour in 0..23 %}
                {% set count = hourly_stats[hour]|default(0) %}
                {% set intensity = (max_hour > 0) ? (count / max_hour) : 0 %}
                {# 10 nuances du vert au rouge #}
                {% set level = (intensity * 9)|round %}
                {% if level == 0 %}
                    {% set bg = '#00c853' %}
                {% elseif level == 1 %}
                    {% set bg = '#4caf50' %}
                {% elseif level == 2 %}
                    {% set bg = '#8bc34a' %}
                {% elseif level == 3 %}
                    {% set bg = '#cddc39' %}
                {% elseif level == 4 %}
                    {% set bg = '#ffeb3b' %}
                {% elseif level == 5 %}
                    {% set bg = '#ffc107' %}
                {% elseif level == 6 %}
                    {% set bg = '#ff9800' %}
                {% elseif level == 7 %}
                    {% set bg = '#ff5722' %}
                {% elseif level == 8 %}
                    {% set bg = '#f44336' %}
                {% else %}
                    {% set bg = '#d32f2f' %}
                {% endif %}
                <div class="heatmap-cell" style="background: {{ bg }}; color: #000;" title="{{ count|round(1) }} clopes/jour √† {{ hour }}h">
                    {{ hour }}h
                </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <!-- Intervalle moyen entre clopes -->
    {% if daily_intervals|length > 0 %}
    <div class="card">
        <h3>Intervalle moyen entre clopes</h3>
        <p style="font-size: 0.8rem; color: var(--text-secondary); margin-bottom: 15px;">√âvolution par jour (en minutes)</p>
        <div class="chart-container">
            <div class="bar-chart">
                {% set max_interval = 1 %}
                {% for date, interval in daily_intervals %}
                    {% if interval > max_interval %}
                        {% set max_interval = interval %}
                    {% endif %}
                {% endfor %}

                {% for date, interval in daily_intervals %}
                    {% set height = max_interval > 0 ? (interval / max_interval * 120) : 0 %}
                    <div class="bar-wrapper">
                        <span class="bar-value">{{ interval }}m</span>
                        <div class="bar" style="height: {{ height }}px; background: linear-gradient(180deg, #00d9a5, #00ff88);"></div>
                        <span class="bar-label">{{ date|date("D")|slice(0, 3) }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Comparaison semaine glissante -->
    {% if weekly_comparison %}
    <div class="card">
        <h3 style="margin-bottom: 15px;">Semaine vs semaine pr√©c√©dente</h3>
        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-value">{{ weekly_comparison.current.total }}</div>
                <div class="stat-label">Cette semaine</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">{{ weekly_comparison.previous.total }}</div>
                <div class="stat-label">Semaine pr√©c√©dente</div>
            </div>
            <div class="stat-item">
                <div class="stat-value" style="color: {{ weekly_comparison.diff_total < 0 ? 'var(--success)' : (weekly_comparison.diff_total > 0 ? 'var(--accent)' : 'inherit') }};">
                    {{ weekly_comparison.diff_total >= 0 ? '+' : '' }}{{ weekly_comparison.diff_total }}
                </div>
                <div class="stat-label">Diff√©rence</div>
            </div>
            <div class="stat-item">
                <div class="stat-value" style="color: {{ weekly_comparison.diff_avg < 0 ? 'var(--success)' : (weekly_comparison.diff_avg > 0 ? 'var(--accent)' : 'inherit') }};">
                    {{ weekly_comparison.diff_avg >= 0 ? '+' : '' }}{{ weekly_comparison.diff_avg }}
                </div>
                <div class="stat-label">Diff moy/jour</div>
            </div>
        </div>
        <p style="font-size: 0.75rem; color: var(--text-secondary); margin-top: 10px; text-align: center;">
            Moyenne : {{ weekly_comparison.current.avg }} clopes/jour (vs {{ weekly_comparison.previous.avg }} avant)
        </p>
    </div>
    {% endif %}

    <!-- R√©sum√© mensuel -->
    <div class="card">
        <h3 style="margin-bottom: 15px;">30 derniers jours</h3>
        {% set total_cigs = 0 %}
        {% set days_with_data = 0 %}
        {% for date, count in monthly_stats %}
            {% set total_cigs = total_cigs + count %}
            {% if count > 0 %}
                {% set days_with_data = days_with_data + 1 %}
            {% endif %}
        {% endfor %}

        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-value">{{ total_cigs }}</div>
                <div class="stat-label">Total clopes</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">{{ days_with_data > 0 ? (total_cigs / days_with_data)|round(1) : 0 }}</div>
                <div class="stat-label">Moyenne/jour</div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
