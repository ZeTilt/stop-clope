{% extends 'base.html.twig' %}

{% block title %}StopClope - Historique{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .date-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .date-nav button {
        background: var(--bg-card);
        border: none;
        color: var(--text-primary);
        padding: 10px 15px;
        border-radius: 8px;
        font-size: 1.2rem;
        cursor: pointer;
    }

    .date-nav button:disabled {
        opacity: 0.3;
        cursor: not-allowed;
    }

    .current-date {
        font-size: 1.1rem;
        font-weight: 500;
    }

    .date-picker {
        background: var(--bg-secondary);
        border: none;
        color: var(--text-primary);
        padding: 8px;
        border-radius: 8px;
        font-size: 1rem;
    }

    .swipe-hint {
        text-align: center;
        font-size: 0.75rem;
        color: var(--text-secondary);
        margin-top: 10px;
        opacity: 0.7;
    }

    @media (hover: hover) {
        /* Cacher l'indication sur desktop */
        .swipe-hint {
            display: none;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <header class="header">
        <h1>Historique</h1>
    </header>

    <!-- Navigation de date -->
    <div class="date-nav">
        <button id="prevDayBtn" {{ selected_date|date('Y-m-d') == first_date|date('Y-m-d') ? 'disabled' : '' }} aria-label="Jour pr√©c√©dent">‚óÄ</button>
        <div>
            <input type="date" class="date-picker" id="datePicker"
                   value="{{ selected_date|date('Y-m-d') }}"
                   min="{{ first_date|date('Y-m-d') }}"
                   max="{{ 'now'|date('Y-m-d') }}"
                   aria-label="S√©lectionner une date">
        </div>
        <button id="nextDayBtn" {{ selected_date|date('Y-m-d') == 'now'|date('Y-m-d') ? 'disabled' : '' }} aria-label="Jour suivant">‚ñ∂</button>
    </div>
    <p class="swipe-hint">Swipe pour changer de jour</p>

    <!-- Score du jour s√©lectionn√© -->
    <div class="card score-display" style="padding: 20px;">
        <div class="score-value {{ daily_score.total_score < 0 ? 'negative' : '' }}" style="font-size: 3rem;">
            {{ daily_score.total_score > 0 ? '+' : '' }}{{ daily_score.total_score }}
        </div>
        <div class="score-label">Points ce jour</div>
    </div>

    <!-- Stats du jour -->
    <div class="card">
        <h3 style="margin-bottom: 15px;">R√©sum√©</h3>
        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-value">{{ cigarettes|length }}</div>
                <div class="stat-label">Clopes</div>
            </div>
            <div class="stat-item">
                {% if wakeup %}
                    <div class="stat-value">{{ wakeup.wakeTime|date('H:i') }}</div>
                {% else %}
                    <div class="stat-value">--</div>
                {% endif %}
                <div class="stat-label">R√©veil</div>
            </div>
            <div class="stat-item">
                {% if cigarettes|length > 0 %}
                    <div class="stat-value">{{ cigarettes|first.smokedAt|date('H:i') }}</div>
                {% else %}
                    <div class="stat-value">--</div>
                {% endif %}
                <div class="stat-label">1√®re clope</div>
            </div>
            <div class="stat-item">
                {% if average_interval > 0 %}
                    {% set total_minutes = average_interval|round(0, 'floor') %}
                    {% set hours = (total_minutes / 60)|round(0, 'floor') %}
                    {% set minutes = total_minutes % 60 %}
                    <div class="stat-value">
                        {% if hours > 0 %}{{ hours }}h{% endif %}{{ '%02d'|format(minutes) }}
                    </div>
                {% else %}
                    <div class="stat-value">--</div>
                {% endif %}
                <div class="stat-label">Intervalle moy.</div>
            </div>
        </div>
    </div>

    <!-- D√©tail des points -->
    <div class="card">
        <h3 style="margin-bottom: 10px;">D√©tail des points</h3>
        <div class="score-breakdown">
            {% if daily_score.details.comparisons is defined %}
                {% for comp in daily_score.details.comparisons %}
                <div class="breakdown-item">
                    <span>
                        {% if comp.exceeded is defined and comp.exceeded %}‚ö†Ô∏è {% endif %}
                        Clope #{{ comp.index }} ({{ comp.diff > 0 ? '+' : '' }}{{ comp.diff }} min)
                    </span>
                    <span class="breakdown-score {{ comp.points > 0 ? 'positive' : 'negative' }}">
                        {{ comp.points > 0 ? '+' : '' }}{{ comp.points }}
                    </span>
                </div>
                {% endfor %}
            {% elseif daily_score.details.message is defined %}
                <div class="breakdown-item">
                    <span>{{ daily_score.details.message }}</span>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Liste des clopes -->
    <div class="card">
        <h3 style="margin-bottom: 10px;">D√©tail des clopes</h3>
        {% if cigarettes|length > 0 %}
            <ul class="cig-list">
                {% for cig in cigarettes %}
                    <li class="cig-item">
                        <div>
                            <span class="cig-time">{{ cig.smokedAt|date('H:i') }}</span>
                            {% if cig.isRetroactive %}
                                <span class="cig-badge">ajout√©e apr√®s</span>
                            {% endif %}
                        </div>
                        <span style="color: var(--text-secondary);">#{{ loop.index }}</span>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">üéâ</div>
                <p>Aucune clope ce jour !</p>
            </div>
        {% endif %}
    </div>
</div>

<script nonce="{{ csp_nonce() }}">
    (function() {
        // Parse dates as local time (not UTC)
        function parseLocalDate(dateStr) {
            var parts = dateStr.split('-');
            return new Date(parts[0], parts[1] - 1, parts[2], 12, 0, 0);
        }

        function formatDate(d) {
            return d.getFullYear() + '-' +
                String(d.getMonth() + 1).padStart(2, '0') + '-' +
                String(d.getDate()).padStart(2, '0');
        }

        var firstDate = parseLocalDate('{{ first_date|date('Y-m-d') }}');
        var selectedDate = parseLocalDate('{{ selected_date|date('Y-m-d') }}');

        function changeDate(offset) {
            var newDate = new Date(selectedDate);
            newDate.setDate(newDate.getDate() + offset);

            var today = new Date();
            today.setHours(12, 0, 0, 0);

            if (newDate >= firstDate && newDate <= today) {
                goToDate(formatDate(newDate));
            }
        }

        function goToDate(date) {
            window.location.href = '{{ path('app_history') }}?date=' + date;
        }

        // Event listeners pour la navigation
        document.getElementById('prevDayBtn').addEventListener('click', function() {
            changeDate(-1);
        });
        document.getElementById('nextDayBtn').addEventListener('click', function() {
            changeDate(1);
        });
        document.getElementById('datePicker').addEventListener('change', function() {
            goToDate(this.value);
        });

        // Swipe support pour navigation entre jours
        var container = document.querySelector('.container');
        var startX = 0;
        var startY = 0;
        var threshold = 80; // Minimum swipe distance

        container.addEventListener('touchstart', function(e) {
            startX = e.touches[0].clientX;
            startY = e.touches[0].clientY;
        }, { passive: true });

        container.addEventListener('touchend', function(e) {
            var endX = e.changedTouches[0].clientX;
            var endY = e.changedTouches[0].clientY;
            var diffX = startX - endX;
            var diffY = startY - endY;

            // Only trigger if horizontal swipe is dominant
            if (Math.abs(diffX) > Math.abs(diffY) && Math.abs(diffX) > threshold) {
                if (diffX > 0) {
                    // Swipe left = jour suivant
                    changeDate(1);
                } else {
                    // Swipe right = jour pr√©c√©dent
                    changeDate(-1);
                }
            }
        }, { passive: true });
    })();
</script>
{% endblock %}
