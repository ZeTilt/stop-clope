<script>
    const slides = document.getElementById('slides');
    const dots = document.querySelectorAll('.dot');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    let currentSlide = 0;
    const totalSlides = 5;
    const setupSlideIndex = 2; // L'index de la slide de configuration

    // Elements du setup
    const initialCigsInput = document.getElementById('initialCigs');
    const packPriceInput = document.getElementById('packPrice');
    const firstWeekGoalEl = document.getElementById('firstWeekGoal');
    const monthlySavingsEl = document.getElementById('monthlySavings');
    const quickSelectBtns = document.querySelectorAll('.quick-select-btn');

    function updateSlide() {
        slides.style.transform = `translateX(-${currentSlide * 100}%)`;

        dots.forEach((dot, i) => {
            dot.classList.toggle('active', i === currentSlide);
            dot.setAttribute('aria-selected', i === currentSlide ? 'true' : 'false');
        });

        prevBtn.disabled = currentSlide === 0;

        if (currentSlide === totalSlides - 1) {
            nextBtn.textContent = 'Commencer';
        } else {
            nextBtn.textContent = 'Suivant';
        }
    }

    function updateSetupPreview() {
        const cigs = parseInt(initialCigsInput.value) || 15;
        const price = parseFloat(packPriceInput.value) || 12;
        const cigsPerPack = 20;

        firstWeekGoalEl.textContent = `${cigs} clopes/jour`;

        // √âconomies = r√©duction moyenne de 1 clope/semaine pendant 1 mois ‚âà 4 semaines
        // Supposons une r√©duction de ~15% la premi√®re semaine en moyenne
        const dailySavingsCigs = cigs * 0.15; // 15% de r√©duction moyenne
        const monthlySavings = (dailySavingsCigs * 30 * price) / cigsPerPack;
        monthlySavingsEl.textContent = `~${Math.round(monthlySavings)}‚Ç¨`;
    }

    async function saveSetupSettings() {
        const cigs = parseInt(initialCigsInput.value) || 15;
        const price = parseFloat(packPriceInput.value) || 12;

        try {
            const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');

            await fetch('{{ path('app_settings_save') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-CSRF-Token': csrfToken
                },
                body: `initial_daily_cigs=${cigs}&pack_price=${price}&cigs_per_pack=20`
            });
        } catch (e) {
            console.error('Failed to save settings:', e);
        }
    }

    nextBtn.addEventListener('click', async () => {
        if (currentSlide < totalSlides - 1) {
            // Si on quitte la slide de configuration, sauvegarder les param√®tres
            if (currentSlide === setupSlideIndex) {
                await saveSetupSettings();
            }
            currentSlide++;
            updateSlide();
        } else {
            // Derni√®re slide : sauvegarder et marquer l'onboarding comme vu
            localStorage.setItem('onboardingCompleted', 'true');
            window.location.href = '{{ path('app_home') }}';
        }
    });

    prevBtn.addEventListener('click', () => {
        if (currentSlide > 0) {
            currentSlide--;
            updateSlide();
        }
    });

    // Quick select buttons
    quickSelectBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const value = btn.dataset.value;
            initialCigsInput.value = value === '25+' ? 25 : value;
            quickSelectBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            updateSetupPreview();
        });
    });

    // Update preview on input change
    initialCigsInput.addEventListener('input', () => {
        // Update quick select active state
        const value = parseInt(initialCigsInput.value);
        quickSelectBtns.forEach(btn => {
            const btnValue = btn.dataset.value === '25+' ? 25 : parseInt(btn.dataset.value);
            btn.classList.toggle('active', value === btnValue);
        });
        updateSetupPreview();
    });

    packPriceInput.addEventListener('input', updateSetupPreview);

    // Swipe support
    let startX = 0;
    let endX = 0;

    slides.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX;
    }, { passive: true });

    slides.addEventListener('touchend', (e) => {
        endX = e.changedTouches[0].clientX;
        const diff = startX - endX;

        if (Math.abs(diff) > 50) {
            if (diff > 0 && currentSlide < totalSlides - 1) {
                currentSlide++;
                updateSlide();
            } else if (diff < 0 && currentSlide > 0) {
                currentSlide--;
                updateSlide();
            }
        }
    }, { passive: true });

    // Click on dots
    dots.forEach((dot, i) => {
        dot.addEventListener('click', () => {
            currentSlide = i;
            updateSlide();
        });
    });

    // Load existing settings if available
    {% if initial_daily_cigs is defined and initial_daily_cigs %}
    initialCigsInput.value = '{{ initial_daily_cigs }}';
    {% endif %}
    {% if pack_price is defined and pack_price %}
    packPriceInput.value = '{{ pack_price }}';
    {% endif %}

    // Initial preview update
    updateSetupPreview();
</script>
{% endblock %}
