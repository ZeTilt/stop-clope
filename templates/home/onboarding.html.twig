    .setup-card {
        background: var(--bg-card);
        border-radius: 12px;
        padding: 25px;
        margin-top: 20px;
        width: 100%;
        max-width: 320px;
    }

    .setup-input-group {
        margin-bottom: 20px;
    }

    .setup-input-group:last-child {
        margin-bottom: 0;
    }

    .setup-label {
