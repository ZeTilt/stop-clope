    }

    .setup-input:focus {
        outline: none;
        border-color: var(--accent);
    }

    .setup-hint {
        font-size: 0.75rem;
        color: var(--text-secondary);
        margin-top: 6px;
        text-align: left;
    }

    .setup-preview {
        background: var(--bg-secondary);
        border-radius: 8px;
        padding: 15px;
        margin-top: 15px;
    }

    .setup-preview-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
    }

    .setup-preview-value {
        font-weight: 600;
        color: var(--success);
    }

    .quick-select {
        display: flex;
        gap: 8px;
        margin-top: 10px;
        flex-wrap: wrap;
    }

    .quick-select-btn {
        padding: 8px 14px;
        border: 2px solid var(--bg-secondary);
        background: var(--bg-secondary);
        color: var(--text-primary);
        border-radius: 8px;
        cursor: pointer;
        font-size: 0.85rem;
        transition: all 0.2s;
    }

    .quick-select-btn:hover {
        border-color: var(--accent);
    }

    .quick-select-btn.active {
        border-color: var(--accent);
        background: var(--accent);
        color: var(--bg-primary);
    }
</style>
{% endblock %}

